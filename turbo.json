{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "build": {
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "lint": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "@react-awesome/docs#deploy": {
      "dependsOn": [
        "@react-awesome/hooks#dev",
        "@react-awesome/phone-input#dev"
      ]
    },
    "clean": {
      "cache": false
    }
  }
}
